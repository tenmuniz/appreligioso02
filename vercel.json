{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/enviar-texto",
      "dest": "app.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/enviar-audio",
      "dest": "app.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/audio/(.*)",
      "dest": "/public/audio/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/app.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 